<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#733DEB">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/report_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="  의심 대화 \n  모니터링 리포트입니다."
            android:textSize="20sp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="#FFF"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/mark_image"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/wlogo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/reportpaper"
        android:padding="16dp"
        android:elevation="6dp"
        android:layout_marginBottom="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/report_child_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=" 대화 요약 중..."
                android:fontFamily="@font/pretendard_medium"
                android:textSize="17sp"
                android:textColor="#000000"/>
        </ScrollView>
    </FrameLayout>

    <ImageButton
        android:id="@+id/report_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="20dp"
        android:text="신고 접수"
        android:textSize="16sp"
        android:background="@drawable/report_report_btn"
        android:textColor="#FFFFFF"/>
</LinearLayout>
